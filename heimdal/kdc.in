#!/bin/sh
#
# PROVIDE: kdc
# REQUIRE: NETWORKING
# BEFORE:  SERVERS

if [ -f "@ENCAP_TARGET@/etc/rc.subr" ]; then
	. "@ENCAP_TARGET@/etc/rc.subr"
elif [ -f /etc/rc.subr ]; then
	. /etc/rc.subr
fi

name="kdc"
rcvar=$name
command="@ENCAP_TARGET@/libexec/${name}"
command_args="--detach"
required_files="@ENCAP_TARGET@/etc/krb5.conf"

load_rc_config $name
run_rc_command "$1"
